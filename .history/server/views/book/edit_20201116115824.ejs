<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Name </label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter Name"
                    name="name" 
                    value="<%= book.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Gender </label>
                    <input type="text" class="form-control"
                    id="genderTextField"
                    placeholder="Enter Gender"
                    name="gender" 
                    value="<%= book.gender %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">1. Among all the Programming languages you've learned. Which one is the easiest? </label>
                    <textarea type="text" class="form-control"
                    id="q1TextField"
                    placeholder="Edit here"
                    name="question1" 
                    value="<%= book.question1 %>"
                    required></textarea>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">2. Which do you prefer, ONLINE class or IN-PERSON class? </label>
                    <textarea type="text" class="form-control"
                    id="q2TextArea"
                    placeholder="Edit here"
                    name="question2" 
                    value="<%= book.question2 %>"
                    required></textarea>
                </div>

                <div class="form-group">
                    <label for="priceTextField">3. After you graduate, what is your future goal? </label>
                    <textarea type="text" class="form-control"
                    id="q3TextField"
                    placeholder="Edit here"
                    name="question3" 
                    value="<%= book.question3 %>"
                    required></textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/survey" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>